{% extends 'BackOfficeBundle::base.html.twig' %}

{% block backoffice_body %}
    <h1>Users list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Isactive</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('backoffice_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                <td>{{ user.role }}</td>
            <td>
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a href="{{ path('backoffice_user_show', { 'id': user.id }) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('backoffice_user_edit', { 'id': user.id }) }}" class="btn btn-secondary">edit</a>
                </div>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" role="group">
        <a href="{{ path('backoffice_user_new') }}" class="btn btn-primary">create</a>
    </div>


{% endblock %}
