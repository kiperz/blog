{% extends 'BackOfficeBundle::base.html.twig' %}

{% block backoffice_body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Is Active?</th>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
        </tbody>
    </table>
    {{ form_start(delete_form) }}
    <div class="btn-group" role="group">
        <a href="{{ path('backoffice_user_index', { 'id': user.id }) }}" class="btn btn-secondary">Back</a>
        <a href="{{ path('backoffice_user_edit', { 'id': user.id }) }}" class="btn btn-primary">Edit</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
    {{ form_end(delete_form) }}
{% endblock %}
